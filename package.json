{
  "name": "dupliclean",
  "version": "1.0.0",
  "description": "Enterprise-grade duplicate detection platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:integration": "jest --config jest.integration.config.js",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "deploy:render": "./scripts/deploy-production.sh",
    "setup:env": "./scripts/setup-env.sh",
    "start:web": "cd apps/web && npm run dev",
    "start:worker": "cd apps/worker && npm run dev",
    "install:all": "npm install && cd apps/web && npm install && cd ../../apps/worker && npm install && cd ../../packages/db && npm install && cd ../../packages/hashing && npm install && cd ../../packages/shared && npm install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "turbo": "^1.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
